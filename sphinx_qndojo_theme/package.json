{
  "name": "sphinx_qndojo_theme",
  "version": "0.1.0",
  "scripts": {
    "build:css": "postcss src/css/*.css --use autoprefixer -d static/css/",
    "build:sphinx": "cd .. && rm -rf _build/html && make html",
    "copy:static": "cpx 'static/**/*' ../_build/html/_static --update",
    "watch": "npm-watch",
    "serve": "browser-sync --watch --reload-debounce=300 ../_build/html",
    "start": "npm-run-all build:css build:sphinx --parallel serve watch"
  },
  "watch": {
    "build:css": {
      "patterns": [
        "src/css/*"
      ],
      "extensions": "*",
      "runOnChangeOnly": true
    },
    "build:sphinx": {
      "patterns": [
        "*.html"
      ],
      "runOnChangeOnly": true
    },
    "copy:static": {
      "patterns": [
        "static/**/*"
      ],
      "extensions": "*",
      "runOnChangeOnly": true
    }
  },
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "browser-sync": "^2.26.5",
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "postcss-cli": "^6.1.2"
  }
}
